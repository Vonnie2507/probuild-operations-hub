# ============================================
# PROBUILD OPERATIONS HUB
# Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# ============================================
# SERVER
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Railway will provide this automatically
DATABASE_URL=postgresql://user:password@localhost:5432/probuild_hub

# ============================================
# JOBMAN API
# ============================================
# Get your Personal Access Token from:
# https://identity.jobmanapp.com/ > Developer > Personal Access Tokens
JOBMAN_API_KEY=your_personal_access_token_here

# Your Organisation ID (UUID) - find this in Jobman URL or API
# Example: 33b928af-f0b5-42f9-ae2f-48dba38929ca
JOBMAN_ORGANISATION_ID=your_organisation_id_here

# Webhook signing secret (generate when creating webhook endpoint)
JOBMAN_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# FILE STORAGE (Cloudflare R2)
# ============================================
# Get these from Cloudflare Dashboard > R2
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=probuild-files
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# ============================================
# AI SERVICES (for transcription & summaries)
# ============================================
# OpenAI Whisper for audio transcription
OPENAI_API_KEY=your_openai_api_key_here

# OR use Anthropic Claude for AI summaries
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# AUTHENTICATION
# ============================================
# Secret for signing JWT tokens (generate a random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Session secret
SESSION_SECRET=another_random_secret_string

# ============================================
# FRONTEND URL (for CORS)
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# OPTIONAL - AI TRANSCRIPTION
# ============================================
# Only needed if you want AI to transcribe pre-start meeting recordings
# OPENAI_API_KEY=your_openai_api_key
